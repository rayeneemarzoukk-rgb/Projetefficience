  {
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "target": "ES6",
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
        {
          "name": "next"
        }
      ],
      "baseUrl": ".",
      // CONSERVATION ET CONFIRMATION DE L'ALIAS
      "paths": {
        "@/*": ["./*"],
        // AJOUT OPTIONNEL MAIS UTILE : Alias pour les composants/libs
        "@/components/*": ["components/*"],
        "@/lib/*": ["lib/*"]
      }
    },
    // INCLURE LE TYPE DE FICHIER UTILISÉ POUR L'INITIALISATION
    "include": [
      "next-env.d.ts", 
      "**/*.ts", 
      "**/*.tsx", 
      ".next/types/**/*.ts",
      "**/*.js" // Ajouté pour inclure explicitement les fichiers JS comme app/init.js
    ],
    "exclude": ["node_modules"]
  }